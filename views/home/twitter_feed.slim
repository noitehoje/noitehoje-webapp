section#twitter_feed
  script[src='http://widgets.twimg.com/j/2/widget.js']
  javascript:
    new TWTR.Widget({
      version: 2,
      type: 'profile',
      rpp: 3,
      interval: 30000,
      width: 'auto',
      height: 300,
      theme: {
        shell: {
          background: '#600863',
          color: '#ffffff'
        },
        tweets: {
          background: '#ffffff',
          color: '#383838',
          links: '#cd11d4'
        }
      },
      features: {
        scrollbar: false,
        loop: false,
        live: false,
        hashtags: true,
        timestamp: false,
        avatars: true,
        behavior: 'default'
      }
    }).render().setUser('noitehoje').start();
